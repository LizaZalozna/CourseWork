<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CourseWork.Views.ViewLendedBooksPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            
            <Style x:Key="FormLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#13A3AD"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="LineBreakMode" Value="NoWrap"/>
            </Style>
            
            <Style x:Key="ListItemNameStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#13A3AD"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="LineBreakMode" Value="NoWrap"/>
            </Style>

            <Style x:Key="ListItemNameOfBookStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#13A3AD"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="LineBreakMode" Value="NoWrap"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0">
        <Label Text="Список взятих книг"
                       Style="{StaticResource HeaderLabelStyle}"
                       Margin="20,0,0,10" />
        <ListView 
                  x:Name="BooksListView"
                  HasUnevenRows="True"
                  SelectionMode="None"
                  SeparatorVisibility="Default"
                  BackgroundColor="AliceBlue"
                  SeparatorColor="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Spacing="4">
                            <Label Text="{Binding NameOfBook}" 
                                   Style="{StaticResource ListItemNameStyle}" />
                            <Label Text="{Binding FullNameOfAuthor}" 
                                   Style="{StaticResource ListItemNameOfBookStyle}" />
                            <Label Text="{Binding Genre}" 
                                   Style="{StaticResource ListItemNameOfBookStyle}" />

                            
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>   
        <StackLayout Grid.Row="1">
        <Label Text="Перелік записів про взяття книг"
                       Style="{StaticResource HeaderLabelStyle}"
                       Margin="20,0,0,10" />
        <ListView 
                  x:Name="LendingListView"
                  HasUnevenRows="True"
                  SelectionMode="None"
                  SeparatorVisibility="Default"
                  BackgroundColor="AliceBlue"
                  SeparatorColor="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Spacing="4">
                            <Label Text="{Binding NameOfBook}" 
                                   Style="{StaticResource ListItemNameStyle}" />
                            <Label Text="{Binding FullNameOfAuthor}" 
                                   Style="{StaticResource ListItemNameOfBookStyle}" />
                            <Label Text="{Binding Genre}" 
                                   Style="{StaticResource ListItemNameOfBookStyle}" />

                            <Label Text="{Binding LendDateString}" 
                            Style="{StaticResource ListItemNameOfBookStyle}" />
                            <Label Text="{Binding ReturnDateString}" 
                             Style="{StaticResource ListItemNameOfBookStyle}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
            </Grid>
    </ContentPage.Content>
</ContentPage>